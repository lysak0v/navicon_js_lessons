        <add key="AppId" value="51f81489-12ee-4a9e-aaae-a2591f45987d"/>
        <add key="RedirectUri" value="app://58145B91-0C36-4500-8554-080854F2AC97"/>
        <add key="LoginPrompt" value="Auto"/>
    </appSettings>
</configuration>       
